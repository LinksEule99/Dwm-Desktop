! --- Fonts ---
URxvt.font: xft:JetBrainsMono Nerd Font:size=11
URxvt.boldFont: xft:JetBrainsMono Nerd Font:style=Bold:size=11
URxvt.italicFont: xft:JetBrainsMono Nerd Font:style=Italic:size=11
URxvt.scrollBar: false

! --- Transparency handled by picom ---
URxvt*foreground: #ffffff
URxvt*background: [80]#282828
URxvt*depth: 32
URxvt*transparent: false
URxvt*shading: 0

! --- Clipboard ---
URxvt.perl-ext-common: default,matcher,selection-to-clipboard 
! Copy on select (like st) 
URxvt.selection.autotransform: true 
! Key bindings 
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard 
URxvt.keysym.Shift-Control-V: eval:paste_clipboard 
URxvt.keysym.Control-C: eval:selection_to_clipboard 
URxvt.keysym.Control-V: eval:paste_clipboard 
! Selection to clipboard automatically 
URxvt.selection.paste-encoding: utf-8

! --- Cursor ---
URxvt.cursorBlink: true
URxvt.cursorColor: #ebdbb2

